<%= link_to('Back to Homepage', { action: 'index' }, class: 'btn btn-secondary mb-3') %>

<div class="container mt-3">
  <h2>Tasks</h2>

  <%= link_to("Add New Task", new_task_path, class: 'btn btn-primary mb-3') %>

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Task</th>
        <th>Description</th>
        <th>Completed</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.name %></td>
          <td><%= task.description %></td>
          <td><%= task.completed? ? 'Yes' : 'No' %></td>
          <td class="actions">
            <%= link_to("Show", task_path(task), class: 'btn btn-info btn-sm') %>
            <%= link_to("Edit", edit_task_path(task), class: 'btn btn-warning btn-sm') %>
            <%= link_to("Delete", delete_task_path(task), class: 'btn btn-danger btn-sm') %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
